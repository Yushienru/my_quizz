{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!{% endblock %}

{% block body %}
<br>
<div class="row justify-content-center">
<img src="img/quizz.png" alt="quizz">
{# <h1>QUIZZ </h1> #}
</div>
<div class="container">
    
    <div class="row justify-content-center">

        {% for categorie in categories %}
        
        <div class="card mt-3 mr-3" style="width: 18rem;">
            <img class="card-img-top" src="img/{{categorie.name}}.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{categorie.name}}</h5>
                <p class="card-text"></p>
                <a href="{{ path('quizz_show', { id: categorie.id })}}" class="btn btn-primary">Go</a>
            </div>
                  </div>
            {% endfor %}
    </div>
</div>


{% endblock %}